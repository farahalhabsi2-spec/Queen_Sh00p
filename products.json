<script>
  // تحميل المنتجات من ملف products.json
  fetch('products.json')
    .then(response => response.json())
    .then(data => {
      const container = document.getElementById('products-container');

      data.forEach(product => {
        // إنشاء عنصر للمنتج
        const card = document.createElement('div');
        card.className = 'product-card';
        card.innerHTML = `
          <img src="${product.image}" alt="${product.name}" style="width:100%; border-radius:8px;">
          <h3>${product.name}</h3>
          <p>${product.price}</p>
          <button style="background:#ff3399; color:white; padding:5px 10px; border:none; border-radius:5px;">أضف للسلة</button>
        `;
        container.appendChild(card);
      });
    })
    .catch(error => console.error('خطأ في تحميل المنتجات:', error));
</script>
  
